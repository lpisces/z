%ul.breadcrumb
  %li
    %a{:href => "/cpanel"}= I18n.t('cpanel.title')
    %span.divider /
  %li.active= I18n.t("cpanel_users.title")


%table.table.table-condensed.table-bordered.table-hover
  %tr
    %th= I18n.t('cpanel_users.nick')
    /%th= I18n.t('cpanel_users.username')
    %th= I18n.t('cpanel_users.email')
    %th= I18n.t('cpanel_users.groups')
    %th

  - @cpanel_users.each do |cpanel_user|
    %tr
      %td= cpanel_user.nick
      /%td= cpanel_user.username
      %td= cpanel_user.email
      %td
        - cpanel_user.groups.each do |g|
          %span= g.name
      %td
        = link_to '<i class="icon-pencil"></i>'.html_safe, edit_cpanel_user_path(cpanel_user)
        = link_to '<i class="icon-remove"></i>'.html_safe, cpanel_user, :method => :delete, :data => { :confirm => I18n.t('common.confirm') }

= link_to I18n.t('common.new'), new_cpanel_user_path
