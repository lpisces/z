%ul.breadcrumb
  %li
    %a{:href => "/cpanel"}= I18n.t('cpanel.title')
    %span.divider /
  %li
    %a{:href => cpanel_users_path}= I18n.t("cpanel_users.title")
    %span.divider /
  %li.active= I18n.t('common.show')

%table.table.table-condensed.table-bordered.table-hover
  %tr
    %th= I18n.t('cpanel_users.nick')
    %td= @cpanel_user.nick
  %tr
    %th= I18n.t('cpanel_users.email')
    %td= @cpanel_user.email
  %tr
    %th= I18n.t('cpanel_users.groups')
    %td
      - @cpanel_user.groups.each do |g|
        %span= g.name
  
= link_to I18n.t('common.edit'), edit_cpanel_user_path(@cpanel_user)
\|
= link_to I18n.t('common.back'), cpanel_users_path
