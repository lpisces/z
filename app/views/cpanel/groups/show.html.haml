%ul.breadcrumb
  %li
    %a{:href => "/cpanel"}= I18n.t('cpanel.title')
    %span.divider /
  %li
    %a{:href => cpanel_groups_path}= I18n.t("cpanel_groups.title")
    %span.divider /
  %li.active= I18n.t('common.show')

%table.table.table-condensed.table-bordered.table-hover
  %tr
    %th= I18n.t('cpanel_groups.name')
    %td= @cpanel_group.name
  %tr
    %th= I18n.t('cpanel_groups.description')
    %td= @cpanel_group.description
  
= link_to I18n.t('common.edit'), edit_cpanel_group_path(@cpanel_group)
\|
= link_to I18n.t('common.back'), cpanel_groups_path
